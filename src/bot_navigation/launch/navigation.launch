<launch>
  <!-- Arguments -->
  <arg name="model" default="dr200" doc="model type [dr200]"/>

  <arg name="use_ekf" default="false"/>
  <arg name="map_file" default="$(find bot_navigation)/maps/map.yaml"/>
  <arg name="open_rviz" default="false"/>
  <arg name="slow_mode" default="true"/>
  <arg name="move_forward_only" default="false"/>
  <arg name="base_local_planner" default="dwa_local_planner/DWAPlannerROS" doc="base local planner [dwa_local_planner/DWAPlannerROS, teb_local_planner/TebLocalPlannerROS]"/>

  <!-- Localization -->
  <include file="$(find bot_navigation)/launch/localization.launch">
    <arg name="map" value="$(arg map_file)"/>
    <arg name="use_ekf" value="$(arg use_ekf)"/>
  </include>

  <!-- move_base -->
  <include file="$(find bot_navigation)/launch/move_base.launch">
    <arg name="model" value="$(arg model)"/>
    <arg name="slow_mode" value="$(arg slow_mode)"/>
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
    <arg name="base_local_planner" value="$(arg base_local_planner)"/>
  </include>

  <!-- rviz -->
  <group if="$(arg open_rviz)">
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find bot_navigation)/rviz/navigation.rviz"/>
  </group>
</launch>